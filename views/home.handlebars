{{> navbar}}

<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card">
        <div class="card-header">Welcome to the Tech Blog</div>

        <div class="card-body">
          {{#if posts.length}}
            {{#each posts}}
              <div class="card mb-3">
                <div class="card-body">
                  <h5 class="card-title">{{title}}</h5>
                  <p class="card-text">{{content}}</p>
                  <a href="/post/{{id}}" class="btn btn-primary">Read More</a>
                </div>
                <div class="card-footer text-muted">Posted on {{formatDate createdAt}}</div>
              </div>
            {{/each}}
          {{else}}
            <p>No posts yet!</p>
          {{/if}}
        </div>
      </div>
    </div>
  </div>
</div>

{{> footer}}

<script src="/js/home.js"></script>
